            @foreach (var menu in Model.Menus)
            {
                if (menu.ChildItems.Count.Equals(0))
                {
                    <li>
                        <a href="@menu.NavigateUrl"><i  class="@menu.ImageUrl"></i>@menu.Text</a>
                    </li>
                }
                else
                {

                    <li>
                        <a href="javascript:void(0)">
                            <i class="@menu.ImageUrl"></i>@menu.Text
                            <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            @{
                                var enumerator = menu.ChildItems.GetEnumerator();
                                while (enumerator.MoveNext())
                                {
                                    var child = enumerator.Current as MenuItem;
                                    if (child.Enabled == false) { continue; }

                                    <li>
                                        <a href="@child.NavigateUrl"> @child.Text</a>
                                    </li>
                                }
                            }
                        </ul>
                    </li>
                }
            }
        </ul>
